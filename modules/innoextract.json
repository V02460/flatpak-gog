{
    "name": "innoextract",
    "buildsystem": "cmake-ninja",
    "cleanup": [
        "*"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://constexpr.org/innoextract/files/innoextract-1.8.tar.gz",
            "sha256": "5e78f6295119eeda08a54dcac75306a1a4a40d0cb812ff3cd405e9862c285269"
        }
    ],
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
