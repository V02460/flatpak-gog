{
    "name": "wine",
    "buildsystem": "simple",
    "build-commands": [
        "if [ \"$GOGARCH\" == 'i386' ]; then ./configure --prefix=${FLATPAK_DEST} --host=i686-unknown-linux-gnu; fi",
        "if [ \"$GOGARCH\" != 'i386' ]; then ./configure --prefix=${FLATPAK_DEST} --enable-win64; fi",
        "make -j $FLATPAK_BUILDER_N_JOBS",
        "make install"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://dl.winehq.org/wine/source/5.x/wine-5.1.tar.xz",
            "sha256": "de8380f78bb0dc0f0ee26a8f16675f8c80c0bf45cf4e305acb82eb9ec3c2c9cd"
        }
    ]
}
